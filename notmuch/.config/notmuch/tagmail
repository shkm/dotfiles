# vim: set filetype=sh

# Specific tags for different mailboxes
+mailbox-personal path:personal/**
+mailbox-work path:work/**

+inbox folder:/[^\/]*\/Inbox/
+archive folder:/[^\/]*\/Archive/
+sent folder:/[^\/]*\/Sent/
+spam folder:/[^\/]*\/Spam/
+trash folder:/[^\/]*\/Trash/
+draft folder:/[^\/]*\/Drafts/
+flagged folder:/[^\/]*\/Starred/ or folder:/[^\/]*\/Flagged/

# Remove new from non-inbox
-new not tag:inbox
