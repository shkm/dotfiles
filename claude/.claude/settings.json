      "mcp__plugin_context7_context7__resolve-library-id",
      "mcp__plugin_context7_context7__query-docs",
      "WebSearch",
      "WebFetch",
      "mcp__plugin_repomix-mcp_repomix__pack_codebase",
      "mcp__plugin_repomix-mcp_repomix__pack_remote_repository",
      "mcp__plugin_repomix-mcp_repomix__generate_skill",
      "mcp__plugin_repomix-mcp_repomix__attach_packed_output",
      "mcp__plugin_repomix-mcp_repomix__read_repomix_output",
      "mcp__plugin_repomix-mcp_repomix__grep_repomix_output",
