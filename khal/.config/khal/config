# vim: set filetype=config
[calendars]
[[personal]]
path = $HOME/Calendars/personal/$PERSONAL_CALENDAR_ID/
[[spouse]]
path = $HOME/Calendars/spouse/$SPOUSE_CALENDAR_ID/

[locale]
timeformat = %H:%M
dateformat = %d/%m/%Y
longdateformat = %d/%m/%Y
datetimeformat = %d/%m/%Y %H:%M
longdatetimeformat = %d/%m/%Y %H:%M
weeknumbers = left

[highlight_days]
color =  light blue
default_color = light red
method = fg

[default]
highlight_event_days = True

[view]
frame = color
theme = dark

[keybindings]
external_edit = e
export = E
