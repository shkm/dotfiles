# vim: set filetype=neomuttrc

# User variables
set my_config_dir="$XDG_CONFIG_HOME/neomutt"

# Basics
set nohelp                                        # hide top bar
set folder = $HOME/Mail
set header_cache = $HOME/.local/share/mutt/cache/headers
set message_cachedir = $HOME/.local/share/mutt/cache/bodies
set mailcap_path = $my_config_dir/mailcap
set tmpdir = $HOME/.local/share/mutt/tmp

                                                  # Writing mail
set realname = "Jamie Schembri"
set edit_headers                                  # show headers when composing
set fast_reply                                    # skip to compose when replying
set fcc_attach                                    # save attachments with the body
set forward_format = "Fwd: %s"                    # format of subject when forwarding
set forward_decode                                # decode when forwarding
set attribution = "On %d, %n wrote:"              # format of quoting header
set reply_to                                      # reply to Reply to: field
set reverse_name                                  # reply as whomever it was to
set include                                       # include message in replies
set forward_quote                                 # include message in forwards
set editor = "nvim"
set query_command = "khard email --parsable '%s'" # Query khard for email addresses
set text_flowed
set send_charset = "utf-8:iso-8859-1:us-ascii"
set sig_on_top                                    # Welcome to the new century
unset mime_forward                                # forward attachments as part of body

# Index
set to_chars = " "
set flag_chars="     "
set index_format = "%Z │ %<[y?%<[m?%<[d?%[%H:%M ]&%[%a %d]>&%[%b %d]>&%[%m/%y ]> │ %-20.20F │ %s
set sort = threads
set sort_aux = reverse-last-date-received
set uncollapse_jump
set sort_re
set charset = "utf-8"

# Status bar
set status_chars = " *%A"
set status_format = "══ %f [%r%m messages%?n? (%n new)?%?d? (%d to delete)?%?t? (%t tagged)? ] %>═%?p?( %p postponed ) ?══"
set date_format = "%H:%M %d/%m/%Y"

# Pager
set pager_index_lines = 10
set pager_context = 3
set pager_stop
set menu_scroll
set tilde
set pager_format =  "══ %-20.20n   %-40.40s%*  %g %Z %C/%m (%P) ══"
unset markers

# Headers / attachments
ignore *
unignore from: to: cc: bcc: date: subject:
unhdr_order *
hdr_order from: to: cc: bcc: date: subject:
alternative_order text/plain text/enriched text/html
auto_view text/html

# Sidebar
set sidebar_visible
set sidebar_short_path
set sidebar_folder_indent
set sidebar_width = 14
set sidebar_width
set sidebar_divider_char = ' ║ '
set sidebar_format = "%D %* %?N?%N"

source $my_config_dir/colors/dracula.muttrc
source $my_config_dir/bindings
source $my_config_dir/accounts/personal # Default to personal account
