# vim: set filetype=neomuttrc

unmailboxes *

set sendmail = "msmtp -a $my_mailbox"
set signature = $my_config_dir/signatures/$my_mailbox
set spoolfile = "+$my_mailbox/Inbox"
set mbox = "+$my_mailbox/Archive"
set postponed = "+$my_mailbox/Drafts"
set record = "+$my_mailbox/Sent"
set trash = "+$my_mailbox/Trash"

source $my_config_dir/account-bindings
