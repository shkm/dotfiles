{
  "$schema": "https://raw.githubusercontent.com/shkm/one-man-band/main/src-tauri/src/config.schema.json",
  "worktree": {
    "copy": {
      "gitIgnored": true,
      "except": [".worktrees", "target", "dist", "node_modules", "mise.toml"],
    },
    "directory": "{{ repo_directory }}/.worktrees",
  },

  "main": {
    "command": "claude",
    "fontFamily": "'Maple Mono NF', Menlo, Monaco, monospace",
    "fontSize": 14,
    "fontLigatures": false,
  },

  "terminal": {
    "fontFamily": "'Maple Mono NF', Menlo, Monaco, monospace",
    "fontSize": 12,
    "fontLigatures": false,
  },
  "merge": {
    "deleteLocalBranch": true,
  },
}
